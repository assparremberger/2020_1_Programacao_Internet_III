@model IEnumerable<Lojinha.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Nova Categoria</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor( model => model.Id )</th>
            <th>@Html.DisplayNameFor( model => model.Nome )</th>
        </tr>
    </thead>

    <tbody>
        @foreach( var cat in Model ){
        <tr>
            <td>@Html.DisplayFor( modelItem => cat.Id )</td>
            <td>@Html.DisplayFor( modelItem => cat.Nome )</td>
        </tr>
        }


    </tbody>


</table>